<% if post.errors.any?%>

<div class="alert alert-danger">
        <% post.errors.full_messages.each do |message| %>
        <ul>
            <li><p><%= message %></p></li>
        </ul>
        <% end %>
    </div>

<% end %>

<%= form_for post do |f| %>

<div class="form-group">
    <%= f.label :title, "Titre de l'article" %>
    <%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :slug, "Url de l'article" %>
    <%= f.text_field :slug, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :category, "Categorie de l'article" %>
    <%= f.select :category_id, Category.pluck(:label, :id) %>
</div>

<div class="form-group">
    <%= f.label :contenu, "Contenu de l'article" %>
    <%= f.text_area :content, class: "form-control" %>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Mettre Ã  jour l'article</button>
</div>

<% end %>