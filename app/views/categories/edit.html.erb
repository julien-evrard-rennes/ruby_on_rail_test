<h1>Éditer la categorie</h1>

<%= form_for @category do |f| %>

<div class="form-group">
    <%= f.label :label, "Label de la catégorie" %>
    <%= f.text_field :label, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :contenu, "Contenu de la catégorie" %>
    <%= f.text_area :content, class: "form-control" %>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Mettre à jour la categorie</button>
</div>

<% end %>